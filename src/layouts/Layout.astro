<style is:global>
  @import "tailwindcss";
  @plugin "@midudev/tailwind-animations";

  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      #fef5f0 0%,
      #ffffff 25%,
      #fde8e8 50%,
      #ffffff 75%,
      #f0e8e8 100%
    );
  }
</style>

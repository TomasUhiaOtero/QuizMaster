---
import Layout from "../layouts/Layout.astro";
---
<style>
    .tab-btn {
      padding-bottom: 0.75rem;
      padding-left: 0.5rem;
      padding-right: 0.5rem;
      font-weight: 500;
      transition: color 0.2s;
      color: #6b7280;
    }
    
    .tab-btn.active {
      color: #f97316;
      border-bottom: 2px solid #f97316;
    }
    
    thead th {
      text-align: left;
      padding: 1rem 1.5rem;
      font-size: 0.875rem;
      font-weight: 500;
      color: #6b7280;
    }

    tbody tr:hover {
      background-color: #fff7ed;
       transform: scale(1.02);
    }
    
    tbody tr {
      border-bottom: 1px solid #f3f4f6;
      transition: all 0.2s ease;
    }
    
    tbody tr:last-child {
      border-bottom: none;
    }
    
    tbody tr:hover td:first-child {
        color: #f97316;
        font-weight: 600;
         transition: color 0.2s ease, font-weight 0.2s ease;
    }
    
    tbody td {
      padding: 1rem 1.5rem;
      color: #111827;
    }
    
    tbody td:nth-child(2) {
      font-weight: 500;
    }
    
    tbody td:nth-child(3) {
      font-weight: 600;
    }
    
    tbody td:nth-child(4) {
      color: #9ca3af;
    }
  </style>

<Layout>
  <!-- Contenedor principal -->
  <div class="max-w-7xl mx-auto mt-10">
    <!-- Título -->
    <h1 class="text-4xl font-bold mb-8">Leaderboard</h1>
    
    <!-- Tabs -->
    <div class="flex gap-6 mb-6 border-b border-gray-200">
      <button
        data-tab="today"
        class="tab-btn pb-3 px-2 font-medium transition-colors text-gray-500"
      >
        Today
      </button>
      <button
        data-tab="week"
        class="tab-btn pb-3 px-2 font-medium transition-colors text-gray-500"
      >
        This Week
      </button>
      <button
        data-tab="all"
        class="tab-btn pb-3 px-2 font-medium transition-colors text-orange-500 border-b-2 border-orange-500 active"
      >
        All Time
      </button>
    </div>

    <!-- Table -->
    <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
       <table class="w-full">
        <thead>
          <tr class="border-b border-gray-200">
            <th>Rank</th>
            <th>Player</th>
            <th>Score</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>1</td>
            <td>Alex Rivera</td>
            <td>980</td>
            <td>2024-01-15</td>
          </tr>
          <tr>
            <td>2</td>
            <td>Sophia Chen</td>

<main>
  <div
    class="relative py-15 px-2 text-center animate-fade-in-up border-0 border-gray-800 rounded-3xl shadow-lg bg-white max-w-3xl mx-auto mt-20"
  >
    <h1 class="text-lg md:text-2xl lg:text-3xl font-bold text-gray-800 mb-2">
      Preparado para el LeaderBoard?
    </h1>
    <p class="text-gray-300 mb-5">Introduce nombre para ver el ranking</p>

    <form id="nombreForm" class="flex flex-col items-center gap-5">
      <!-- Input -->
      <input
        id="nombreInput"
        type="text"
        name="nombre"
        placeholder="Tu nombre..."
        required
        class="w-64 md:w-80 px-4 py-3 border-2 border-gray-300 rounded-lg text-gray-700 placeholder-gray-400 focus:outline-none focus:border-[#ff8a00] transition duration-300 shadow-sm"
      />

      <!-- Botón -->
      <button
        type="submit"
        class="bg-[#ff8a00] hover:bg-[#e52e71] flex mx-auto text-white font-bold py-3.5 px-35 mt-5 rounded-full hover:animate-pop hover:shadow-xl cursor-pointer"
      >
        Continuar
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="1"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="icon icon-tabler icons-tabler-outline icon-tabler-arrow-right ml-2"
        >
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path d="M5 12l14 0"></path>
          <path d="M13 18l6 -6"></path>
          <path d="M13 6l6 6"></path>
        </svg>
      </button>
    </form>
  </div>

  <!-- Script corregido -->
  <script>
  document.addEventListener("DOMContentLoaded", () => {
    const form = document.getElementById("nombreForm");
    const input = document.getElementById("nombreInput") as HTMLInputElement;

    if (!form || !input) return;

    form.addEventListener("submit", (e) => {
      e.preventDefault();
      const nombre = encodeURIComponent(input.value); // ✔ ahora funciona
      window.location.href = `/leaderboard2?nombre=${nombre}`;
    });
  });
</script>

</main>
